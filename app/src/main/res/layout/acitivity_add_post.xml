<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="@dimen/std_margin"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".AddPost">

    <ImageView
            android:id="@+id/postImageIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:contentDescription="@string/post_image_desc"
            android:layout_marginBottom="@dimen/std_margin"
            android:scaleType="centerCrop"
            android:background="@mipmap/add_image_holder"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/std_margin">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/postBodyTIET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/post_body_hint">

        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/sendPostBtn"
            android:layout_width="@dimen/image_height"
            android:layout_height="wrap_content"
            android:text="@string/send_post_btn_text"/>


</LinearLayout>